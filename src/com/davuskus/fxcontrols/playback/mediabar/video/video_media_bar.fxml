<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane stylesheets="@../../../resources/css/main_stylesheet.css" xmlns="http://javafx.com/javafx/9.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.davuskus.fxcontrols.playback.mediabar.video.VideoMediaBar">
    <children>
        <fx:include fx:id="mediaBar" source="../media_bar.fxml" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>

        <Button fx:id="fullscreenButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" onAction="#fullscreenButtonOnAction" prefHeight="30.0"
                prefWidth="30.0" styleClass="transparent-button" AnchorPane.bottomAnchor="6.0"
                AnchorPane.rightAnchor="6.0">
            <graphic>
                <ImageView fx:id="fullscreenImageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../../resources/icons/fullscreen/icon_fullscreen_white.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

    </children>
</AnchorPane>